<%- include('./header.ejs'); %>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Home Page</title>
    <link href="./css/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="./js/bootstrap.js" type="text/javascript"></script>

    <style>
      /* .loginContainer{ border:1px solid #EE5731;} 
      h1{ text-align: center; color:#a42543; } 
      .customBtn{ width: 100%; align-items:center ; border-radius: 8px ;
      background-color: #EE5731; color: white; border: none; focus: none;  } */
      .loginBodyContainer {
        min-width: 80%;
        min-height: 50%;
        border: 3px solid #ee5731;
        align-items: center;
        position: absolute;
        padding: 1em;
        top: 30%;
        left: 35%;

      }
      .loginContainer {
        display: block;
        margin: auto;
      }
      h2 {
        color: #a42543;
        font-weight: bold;
        text-align: center;
      }
      form {
        margin-top: 5%;
        text-align: center;
        position: fixed;
      }
      button {
        width: 25%;
        align-items: center;
        border-radius: 20px;
        background-color: #ee5731;
        color: white;
        border: none;
      }
    </style>
  </head>
  <body>
    <div class="loginBodyContainer">
      <div class="loginContainer">
        <h2>LOGIN</h2>
        <form actions="/" method="POST">
          <div>
            <label for="loginId"
              >ID

              <input
                type="text"
                name="loginId"
                id="loginId"
                value="<%= %>"
                style= "margin-left: 44px;"
              />
            </label>
          </div>
          <div style="margin-top: 10px">
            <label for="password"
              >Password
              <input
                type="text"
                name="password"
                id="password"
                value="<%= %>"
              />
            </label>
          </div>
          <div class="submit">   
            <button type="submit" style="margin: 10px 0px">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
